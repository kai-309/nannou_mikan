<div class='container text-center'>
  <div class='row'>
    <div class="col-md-1"></div>
    <div class="col-md-10">
    <div class= col-11>
      <h3 class="m-3 text-center">会員一覧</span></h3>
    </div>
    <table class="table">
      <thead>
        <tr class="bg-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
    <tbody>
      <% @customers.each do |customers| %>
        <tr>
          <td><%= customers.id %></td>
          <td><u>
            <%= link_to admin_customer_path(customers), :style=>"color:black;" do %>
              <%= customers.first_name %>
              <%= customers.last_name %>
            <% end %>
          </td></u>
          <td><%= customers.email %></td>
            <% if customers.is_deleted %>
          <td class="text-secondary">退会</td>
            <% else %>
          <td class="text-success">有効</td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
    </table>
      <%= paginate @customer %>
    </div>
  </div>
</div>