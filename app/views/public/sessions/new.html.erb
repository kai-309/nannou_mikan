<div class="container">

  <h4 class="mb-5">ログイン</h4>

  <h4>会員の方はこちらからログイン</h4>
  <%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
    <table class="table table-borderless align-middle">
      <tbody>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "tanaka@example.com", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td>
           <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>

  <h4>会員登録がお済みでない方</h4>
  <%= render "public/shared/links" %>
</div>