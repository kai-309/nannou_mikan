 <h3 class= "text-center pt-3 mb-5">配送先登録・一覧</h3>
</div>
<div class= "container" style="margin-left:200px;">
 <div class="col-7">
<%= form_with model: @address, local:true do |f| %>
   <div class="form-group row">
    <%= f.label "郵便番号" %>
    <%= f.text_field :post_code, placeholder: "0001111", class: 'ml-3' %>
   </div>

   <div class="form-group row">
    <%= f.label "住所" %>
    <%= f.text_field :address, placeholder: "都道府県市町村", class: 'col-md-6 ml-5' %>
   </div>

   <div class="form-group row">
    <%= f.label "宛名" %>
    <%= f.text_field :name, placeholder: "名前", class: 'ml-5' %>
  </div>

   <div class="form-group text-right">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>
 </div>
</div>

<div class="table-responsive mt-5" style="width:70%; margin:auto;">
 <table class="table table-bordered border-primary">
   <thead  style="background-color:#f8f9fa;">
    <tr class="text-center">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
       <th colspan="5"></th>
    </tr>
  </thead>
  <tbody style="background-color:white;">
     <% @addresses.each do |address| %>
     <tr class="text-center">
       <td><%= address.post_code %></td>
       <td><%= address.address %></td>
       <td><%= address.attention_name %></td>
       <td><%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
           <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-danger' %></td>
     </tr>
     <% end %>
  </tbody>
 </table>
</div>

