<div class="container">
  <div class="pt-5 d-block">
    <%= image_tag'top.jpg', size:"1100x500" ,style:"position: relative;" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="row">
      <% @item.each do |item| %>
      <% if item.is_status == true %>
    <div class="card text-center p-2 m-2">
      <%= link_to item_path(item) do %>
      <%= image_tag item.get_image(100, 100) %><br>
      <% end %>
        <p><%= item.name %></p>
        <p>¥<%= item.excluded_price %>(税込)</p>
    </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
