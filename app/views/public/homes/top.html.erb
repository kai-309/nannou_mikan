
<div id="top" class="container">
  <div class="row">

    <div class="col-9 mb-4">
        <div id="top-image" class="top-box mt-3">
          <div class="card-img-overlay text-center mt-5">
          </div>
          </div>
        </div>
      </div>
      
      
      <h4>新着商品</h4>
      <div class="row">
        <% @item.each do |item| %>
        <% if item.is_status == true %>
          <div class="card text-center p-2 m-2">
            <%= link_to item_path(item) do %>
            <%= image_tag item.get_image(100, 100) %><br>
            <% end %>
            <p><%= item.name %></p>
            <p>¥<%= item.excluded_price %>(税込)</p>
          </div>
            <% end %>
            <% end %>
        </div>
    </div>
  </div>
</div>
