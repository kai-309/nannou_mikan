<div class="average-review-rating" data-score=<%= @reviews.average(:rating) %>></div>
  <th class="table__col1">総合評価</th>
  <td class="table__col1">
    <div class="field" id="star"><% f.label :rating %></div>
  </td>
<%= render partial: "items/form_rate", locals: { item: @item } %>